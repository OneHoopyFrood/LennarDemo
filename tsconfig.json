{
  "compilerOptions": {
    "target": "ES2020", // Updated for better modern JavaScript support
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ], // Match the updated target
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed to "node" for better compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.js" // Include JavaScript files in the src folder
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ] // Added common exclusions
}
